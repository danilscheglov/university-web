{% extends 'base.twig' %}

{% block title %}Ошибка{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="alert alert-danger">
            <h4 class="alert-heading">Произошла ошибка!</h4>
            <p>{{ message }}</p>
            <hr>
            <p class="mb-0">
                <a href="/" class="btn btn-outline-danger">Вернуться на главную</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}