{% extends 'base.twig' %}

{% block title %}Список автомобилей{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-12 col-xl-10">
        <div class="card-header border-0 pt-4">
            <h3 class="card-title text-center mb-3">
                Список автомобилей
            </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Марка</th>
                            <th>Модель</th>
                            <th>Год</th>
                            <th>Цвет</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for car in cars %}
                            <tr class="position-relative">
                                <td>{{ car.brand }}</td>
                                <td>{{ car.model }}</td>
                                <td>
                                    <span class="badge bg-primary rounded-pill">
                                        {{ car.year }}
                                    </span>
                                </td>
                                <td>
                                    <div class="color-preview rounded-circle"
                                        style="background-color: {{ getColorHex(car.color) }}">
                                    </div>
                                    {{ car.color }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Нет автомобилей для отображения</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}